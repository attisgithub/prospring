<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="job" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="taskscheduling.quartz.MessageJob" />
		<property name="jobDataAsMap">
			<map>
				<entry key="message" value="This is a message from the Spring Config file" />
			</map>
		</property>
	</bean>
	
	<bean id="trigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="job" />
		<property name="startDelay" value="1000" />
		<property name="repeatInterval" value="3000"></property>
		<property name="jobDataAsMap">
			<map>
				<entry key="triggerMesage" value="Trigger message from the Spring Config file" />
			</map>
		</property>
	</bean>
	
	<bean id="schedulerFactory" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref local="trigger" />
			</list>
		</property>
	</bean>

</beans>
